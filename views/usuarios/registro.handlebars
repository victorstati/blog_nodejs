<h3>Crie sua conta hoje</h3>

<div class="card">
    <div class="card-body">
        <form method="POST" action="">
            <label for="nome">Nome</label>
            <input type="text" name="nome" class="form-control" placeholder="Digite seu nome" required />

            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Digite seu email" required />

            <label for="senha">Senha</label>
            <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required />

            <label for="senha2">Repita sua senha</label>
            <input type="password" name="senha2" class="form-control" placeholder="Repita sua senha" required />

            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>